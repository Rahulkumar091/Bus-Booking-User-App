<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PaymentSuccessActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_checked_done"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/checked_done"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Payment Successfull"
        android:layout_margin="20dp"
        android:textSize="28sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please click on Book Now for book your seat"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Book Now"
        android:textSize="22dp"
        android:background="@drawable/shape_button"/>

</LinearLayout>